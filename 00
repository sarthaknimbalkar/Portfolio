/*colors
    image background rgba(4,9,30,0.7);
    #fff3f3
    places hover color rgba(226,0,0,0.7)*/
    
    function kaatu(){
let ham_icon = document.getElementById("align-justify");
let menu = document.querySelector("#toggle ul");
let cut_icon = document.getElementById("cut");

    menu.style.width="60%";
    ham_icon.style.opacity="0";
    
}
    
    
function muudu(){
let ham_icon = document.getElementById("align-justify");
let menu = document.querySelector("#toggle ul");
let cut_icon = document.getElementById("cut");

  menu.style.width="0";
  ham_icon.style.opacity="1"; 
}

